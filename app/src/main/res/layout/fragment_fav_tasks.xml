<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/taskFavListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ProgressBar
            android:id="@+id/progressBarFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            app:layout_constraintStart_toStartOf="@+id/taskFavListView"
            app:layout_constraintTop_toTopOf="@+id/taskFavListView"
            app:layout_constraintEnd_toEndOf="@+id/taskFavListView"
            app:layout_constraintBottom_toBottomOf="@+id/taskFavListView"/>
</android.support.constraint.ConstraintLayout>